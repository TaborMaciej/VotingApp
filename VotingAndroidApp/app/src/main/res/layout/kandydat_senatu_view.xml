<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/ZdjecieKandydata"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider"
        android:layout_width="1278dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ImieTextView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Imie Nazwisko"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/ZdjecieKandydata"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <Button
        android:id="@+id/WyborSenatBtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginEnd="104dp"
        android:text="Wybieram tego kandydata"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/OpisTextView"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque condimentum cursus tortor viverra dapibus. Maecenas molestie nunc eu eros cursus condimentum. Quisque imperdiet euismod faucibus. Nulla eu odio luctus, pellentesque augue sed, consequat sapien. Sed gravida nunc ut tincidunt viverra. Interdum et malesuada fames ac ante ipsum primis in faucibus. Morbi suscipit leo et massa tristique sodales. Integer dui risus, vehicula semper diam id, maximus semper felis."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ZdjecieKandydata"
        app:layout_constraintTop_toBottomOf="@+id/ImieTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>